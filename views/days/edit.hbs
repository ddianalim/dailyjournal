<div>
  <form action="/days/{{day.id}}" method="post">
    <legend>Edit Day</legend>

    <div class="form-group">
      <label for="day-date">Date</label>
      <input type="date" name="date" class="input-text" id="day-date" value="{{day.date}}" required>
    </div>

    <div class="form-group">
      <label for="day-description">Description</label>
      <textarea name="description" class="input-text" id="day-description" required>{{day.description}}</textarea>
    </div>

    <div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>
